# Basic Settings
#
#fontName         = "Espresso Mono"
fontName         = "Input Mono"
fontSize         = 14

# Include abbreviated path in window title
#   1. Strip out leading /Users/.*/code/ or /Users/.*/dev/
#   2. Show remaining two directories of context
#
windowTitle = "$TM_DISPLAYNAME – ${TM_DIRECTORY/^(?:\/Users\/(?:[^\/]+\/)+(?:code|dev)\/).*?((?:[^\/]+\/)?[^\/]+)$/$1/i}"

# Extra files to include
#
myExtraIncludes = ".tm_properties,.htaccess,.gitignore,.hgignore,.rvmrc,.rbenv-version,.ruby-version,.ruby-gemset,.deployrc,.powenv,.powrc, .rubocop.yml"
fileBrowserGlob  = "{*,$myExtraIncludes}"
include = "{$include,$myExtraIncludes}"

# Hide certain directories from search popups.
#
myExtraExcludes = "log,_site,target,_tmp,tmp,config.codekit,bower_components,node_modules,venv"
excludeInFileChooser  = "{$excludeInFileChooser,$myExtraExcludes}"
